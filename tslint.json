{
    "extends": [
      "tslint:recommended"
    ],
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts",
        "src/api/datasources/models/*.ts",
        "src/types/schema.ts"
      ]
    },
    "rules": {
      "arrow-parens": false,
      "eofline": true,
          "indent": [
              true,
              "spaces",
              2
          ],
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "no-console": true,
      "no-debugger": true,
      "no-empty-interface": false,
      "member-ordering": false,
      "curly": [
        true,
        "ignore-same-line"
      ],
      "quotemark": [
              true,
              "single"
      ],
      "trailing-comma": [
              true,
              {
                  "multiline": {
                      "objects": "ignore",
                      "arrays": "ignore",
                      "functions": "never",
                      "typeLiterals": "ignore"
                  },
                  "esSpecCompliant": true
              }
      ],
      "interface-name": false,
      "radix": false,
      "max-line-length": [
        true,
        {
          "limit": 120,
          "ignore-pattern": "^import |^export {(.*?)}|class [a-zA-Z]+ implements |// "
        }
      ]
    }
  }